<html lang="en">
<head>
{{>header}}
</head>
<body class="container">
<h1> Add Week to Planner</h1>
<a href="/" class="btn btn-primary">
      Planner
    </a>
<form method="post" role="form" >

 <div class="form-group">
    <label for="Author">Author</label>
    <input type="text" class="form-control" id="Author"
    name="Author" placeholder="Written by" required>
 </div>
 
 <div class="form-group">
    <label for="training_Week">Training Week</label>
    <input type="text" class="form-control" id="training_week"
    name="training_week" placeholder="Week of Training i.e. Week 1" required>
 </div>

 <div class="form-group">
    <label for="goal_start_date">Goal Start Date</label>
    <input type="text" class="form-control" id="Goal Start Date"
    name="goal_start_date" placeholder="Start Date of the goals set" required>
 </div>

  <div class="form-group">
    <label for=" Goal">Goal 1</label>
    <input type="text" class="form-control" id="goal"
    name="goal" placeholder="The Goal for the Week" required>
 </div>


  <div class="form-group">
    <label for="goal_progress">Goal progress</label>
    <input type="text" class="form-control" id="goal_progress"
    name="goal_progress" placeholder="Reps, distance or effort completed so far" required>
 </div>


 <div class="form-group">
    <label for="goal_completion_date">Date of all goals being completed</label>
    <input type="text" class="form-control" id="goal_completion_date"
    name="goal_completion_date" placeholder="Day all goals were completed" required>
 </div>

 <div class="form-group">
    <label for="all_goal_completion">All Goals Completion Status</label>
    <input type="text" class="form-control" id="all_goal_completion"
    name="all_goal_completion" placeholder="all goals, completed/incomplete/in progress" required>
 </div>



 <div class="form-group">
    <input type="submit" value="Add Goal" class="btn btn-primary">
 </div>
</form>
</body>
</html>